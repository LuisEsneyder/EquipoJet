@page
@model FinanzasMiHogar.App.FrontEnd.GastosModel
@{
    Layout = "../Shared/_LayaouForGasto";
}
<div class="cover-container d-flex w-1 h-100 p-2 flex-column">
           
            <div class="col-md-12 col-md-9">

              
                <form  class="needs-validation justify-content-center">
                   <div class="col-md-12">
                      <label for="email" class="form-label">Nombre Gastos
                      <input type="text" class="form-control " id="Gasto" name="NombreGasto" placeholder="Luz,Agua,Netflix..." required>
                      <div class="invalid-feedback">
                        Este campo es requerido.
                      </div>
                    </div>
                    <div class="col-md-12">
                      <label for="Gasto" class="form-label">Valor Gasto
                      <input type="number" class="form-control" id="ValorGasto" name="ValorGasto" placeholder="" required>
                      <div class="invalid-feedback">
                        Este campo es requerido.
                      </div>
                    </div>
                    <div class="col-md-12">
                      <label for="Gasto" class="form-label">Fecha pago
                      <input type="date" class="form-control" id="ValorGasto" name="FechaGasto" placeholder="" required>
                      <div class="invalid-feedback">
                        Este campo es requerido.
                      </div>
                    </div>
                    <div class="col-md-12">
                      <label for="Gasto" class="form-label">Tipo Gasto </label>
                        <select class="selectpicker" name="Tipo Gasto">
                            
                                <option value="Servicio">Servicios Publicos</option>
                                <option value="Suscripcion" >Suscripcion</option>
                                <option value="Mercado">Mercado</option>
                                <option value="Otros">Otros</option>
                            
                        </select>
                      
                      <div class="invalid-feedback">
                        Este campo es requerido.
                      </div>
                    </div>
                    <div class="col-md-12">
                      <label for="Gasto" class="form-label">Periodo Gasto </label>
                        <select class="selectpicker" name="Tipo Gasto">                            
                                <option value="Mensual">Mensual</option>
                                <option value="Quincenal" >Quincenal</option>
                                <option value="Semanal">Semanal</option>                            
                        </select>
                      
                      <div class="invalid-feedback">
                        Este campo es requerido.
                      </div>
                    </div>
                   <button class="btn btn-lg btn-secondary fw-bold" type="submit" asp-page="/Gastos/Gastos">Guardar</button>
                   
                </form>
        </div>